<link rel="stylesheet" href="/css/grid.css">

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Mandata Information system</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
      </ul>


    </div>
  </div>

  <form class="d-flex" method="POST" action="/admin" novalidate>
          <button class="btn btn-primary align-self-center" type="submit">Admin</button>
        </form>

    <form class="d-flex" method="POST" action="/userreg" novalidate>
          <button class="btn btn-primary align-self-center" type="submit">Register</button>
        </form>

        <form class="d-flex" method="POST" action="/grid" novalidate>
          <button class="btn btn-primary align-self-center" type="submit">Logout</button>
        </form>
</nav>


<div class="container">
  <div class="row">
    {{#each rows}}
    <div class="col-4">
      <div class="card">
        {{#if this.picture}}
        <img class="card__image" src="data:image/png;base64,{{this.picture}}" loading="lazy" alt="Embedded Image">
        {{else}}
        <img class="card__image" src="/img/default.jpg" loading="lazy" alt="User Profile">
        {{/if}}

        <h1 class="card__title">{{this.name}}</h1>
        
        <p class="card__about">
          {{this.email}}
        </p>
        <div class="row">
          <a href="/viewprod/{{this.id}}" type="button" class="btn btn-primary">View</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>

